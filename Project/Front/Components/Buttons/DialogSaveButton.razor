@namespace Exato.Front.Components.Buttons

<MudButton
    Class="@Class"
    Disabled="@Disabled"
    OnClick="@HandleClick"
    Variant="Variant.Filled"
    Style="@($"color: white; background: {SaveColor};")"
>
    @if (Loading)
    {
        <MudProgressCircular Class="ms-n1 mr-2" Size="Size.Small" Indeterminate="true" />
        @Text
    }
    else
    {
        @Text
    }
</MudButton>

@code
{
    [Parameter]
    public string Text { get; set; } = "Salvar";

    [Parameter]
    public string SaveColor { get; set; } = Colors.Green.Default;

    [Parameter]
    public string Class { get; set; } = "mr-4";
    
    [Parameter]
    public EventCallback OnClick { get; set; }

    [Parameter]
    public bool Disabled { get; set; }
    [Parameter]
    public EventCallback<bool> DisabledChanged { get; set; }

    [Parameter]
    public bool Loading { get; set; }
    [Parameter]
    public EventCallback<bool> LoadingChanged { get; set; }

    private async Task HandleClick()
    {
        Disabled = true;
        await OnClick.InvokeAsync();
        Disabled = false;
    }
}
