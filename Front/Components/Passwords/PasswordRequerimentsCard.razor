@namespace Syki.Front.Components.Passwords

<MudAlert NoIcon Class="mt-0 mb-6 mx-4" Severity="Severity.Normal" Variant="Variant.Text" ContentAlignment="HorizontalAlignment.Center" Elevation="1">
    <MudText>Sua senha deve conter:</MudText>
    <PasswordRequeriment Ok="@Validation.HasNumbers" Text="números" />
    <PasswordRequeriment Ok="@Validation.HasLower" Text="letras minúsculas" />
    <PasswordRequeriment Ok="@Validation.HasUpper" Text="letras maiúsculas" />
    <PasswordRequeriment Ok="@Validation.HasLength" Text="8 ou mais caracteres" />
    <PasswordRequeriment Ok="@Validation.HasNonAlphanumeric" Text="caracteres especiais" />
</MudAlert>

@code
{
    [Parameter]
    public SetupPasswordValidation Validation { get; set; }

    [Parameter]
    public EventCallback<SetupPasswordValidation> ValidationChanged { get; set; }
}
