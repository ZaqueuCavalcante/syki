@namespace Syki.Front.Features.Academic.BuildClassroomAssignment

<MudItem xs="12" sm="6" md="3" lg="3">
    <MudPaper Class="px-4 py-2">
        <MudStack Row Justify="Justify.FlexStart" AlignItems="AlignItems.Center" Spacing="3">
            <MudIcon Icon="@Icon" Color="@Color" />
            <MudText Typo="Typo.h6"><b>@Name</b></MudText>
        </MudStack>

        <MudStack Row Justify="Justify.FlexStart" AlignItems="AlignItems.Center" Spacing="3">
            <MudText>@Capacity Vagas</MudText>
        </MudStack>

        <MudButton
            StartIcon="@Icons.Material.Outlined.Add"
            IconSize="Size.Large"
            Variant="Variant.Filled"
            Size="Size.Medium"
            Color="Color.Primary"
            OnClick="@(() => OnClick?.Invoke())"
        >
            Turma
        </MudButton>
    </MudPaper>
</MudItem>

@code
{
    [Parameter]
    public string Icon { get; set; } = Icons.Material.Filled.VideoLabel;

    [Parameter]
    public Color Color { get; set; }

    [Parameter]
    public string Name { get; set; }

    [Parameter]
    public int Capacity { get; set; }

    [Parameter]
    public Action OnClick { get; set; }
}
