@using System.Linq.Expressions
@using Exato.Front.Features.Office.GetUsers
@using Exato.Shared.Features.Office.GetUsers

@namespace Exato.Front.Components.Users

<MudAutocomplete
	Dense
	For="@For"
	Clearable
	MaxItems=50
	Class="pb-2"
	Value="@Value"
	Label="Usuário"
	Strict="false"
	T="UserSelectData"
	SearchFunc="@Search"
	Margin="Margin.Dense"
	ResetValueOnEmptyText
	ShowProgressIndicator
	DebounceInterval="500"
	Variant="Variant.Outlined"
	ValueChanged="@ValueChanged"
	AdornmentIcon="@Icons.Material.Filled.Search"
	ToStringFunc="@(e => e == null ? null : $"{e.Name}")"
>
	<ItemTemplate Context="e">
		<MudText Typo="Typo.body2">@e.Name</MudText>
	</ItemTemplate>
</MudAutocomplete>

@inject GetUsersClient Client

@code
{
	[Parameter]
	public UserSelectData Value { get; set; }

    [Parameter]
    public EventCallback<UserSelectData> ValueChanged { get; set; }

    [Parameter]
    public Expression<Func<UserSelectData>>? For { get; set; }

    protected override async Task OnParametersSetAsync()
    {
		await Task.Yield();
    }

    private async Task<IEnumerable<UserSelectData>> Search(string value, CancellationToken token)
    {
        var query = new GetUsersIn { Page = 0, Name = value };

		var response = await Client.Get(query);

		return response.Items.ConvertAll(x => new UserSelectData { Id = x.Id, Name = x.Name });
    }
}
