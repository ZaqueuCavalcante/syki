@namespace Syki.Front.Features.Academic.CreateCourseCurriculum

<MudDialog ContentClass="px-4">
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.AccountTree" Class="mr-1 mb-n1" />
            @MudDialog.Title
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudDataGrid
            Class="mb-4"
            Dense="true"
            Hover="true"
            Items="@Disciplines.OrderBy(d => d.Period).ThenBy(d => d.Name)"
        >
            <Columns>
                <PropertyColumn Property="x => x.Name" Title="Nome" />
                <PropertyColumn Property="x => x.Period" Title="Período" />
                <PropertyColumn Property="x => x.Credits" Title="Créditos" />
                <PropertyColumn Property="x => x.Workload" Title="CH" />
            </Columns>
        </MudDataGrid>
    </DialogContent>
</MudDialog>

@code
{
    [CascadingParameter]
    IMudDialogInstance MudDialog { get; set; }

    [Parameter]
    public List<DisciplineOut> Disciplines { get; set; }
}
