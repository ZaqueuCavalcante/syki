@namespace Syki.Front.Components.Custom

<MudCard Outlined Elevation="0" Style="height: 100%">
	<MudCardHeader Style="padding: 8px 8px 8px 20px">
		<CardHeaderAvatar>
			<MudIcon Icon="@Icon" Style="@($"color: {@Color}")" Size="Size.Medium" />
		</CardHeaderAvatar>
		<CardHeaderContent>
			<MudText Style="font-size: 12px; color: #7C8183">
				@Title
			</MudText>
			@if (Content.HasValue())
			{
				@if (Json)
				{
					<MudText Typo="Typo.body2" Style="font-size: 16px; font-weight: 700; white-space: pre-wrap;">
						@Content
					</MudText>
				}
				else
				{
					<MudText Style="font-size: 18px; font-weight: 700">
						@Content
					</MudText>
				}
			}
			else
			{
				@ChildContent
			}
		</CardHeaderContent>
	</MudCardHeader>
</MudCard>

@code
{
	[Parameter]
	public RenderFragment ChildContent { get; set; }

	[Parameter]
	public string Icon { get; set; }

	[Parameter]
	public string Color { get; set; }

	[Parameter]
	public string Title { get; set; }

	[Parameter]
	public string Content { get; set; }

	[Parameter]
	public bool Json { get; set; }
}
