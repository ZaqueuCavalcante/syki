@using Exato.Front.Features.Office.GetUsers
@using Exato.Shared.Features.Office.GetUsers
@using Exato.Front.Features.Office.CreateUser

@namespace Exato.Front.Pages.Office

@page "/office/users"
@attribute [Authorize(Policies.ViewOfficeUsersPage)]

<ExatoPageTitle Title="Users" />

<MudContainer Class="my-4 px-4">
    <ExatoPageHeader Icon="@Icons.Material.Filled.People" Title="Users" ButtonText="Novo Usuário" OnClick="@OpenDrawer" ButtonPolicy="@Policies.OfficeCreateExatoUser" />
    <MudContainer Class="px-0 my-4">
        <MudTable @ref="@_table" Items="@_users.Items" Loading="@_loading" RowsPerPage="10" Hover Dense>
            <HeaderContent>
                <MudTh>Nome</MudTh>
                <MudTh>Email</MudTh>
                <MudTh>Role</MudTh>
                <MudTh>Criado em</MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd DataLabel="Nome">@context.Name</MudTd>
                <MudTd DataLabel="Email">@context.Email</MudTd>
                <MudTd DataLabel="Role">
                    <MudStack Row AlignItems="AlignItems.Center" Spacing="1">
                        @{ var (color, icon, status) = @context.GetTwoFactorEnabled(); }
                        <MudTooltip Text="@status" Arrow Placement="Placement.Top">
                            <MudIcon Size="@Size.Small" Icon="@icon" Color="@color" />
                        </MudTooltip>
                        <MudText Typo="Typo.body2">@context.Role</MudText>
                    </MudStack>
                </MudTd>
                <MudTd DataLabel="Criado em">@context.CreatedAt.ToDateTimeString()</MudTd>
            </RowTemplate>
            <PagerContent>
                <MudDivider DividerType="DividerType.FullWidth"/>
                <MudStack Row AlignItems="AlignItems.Center" Justify="Justify.SpaceBetween" Class="mx-4">
                    <MudTooltip Text="Total de registros" Arrow Placement="Placement.Top">
                        <MudStack Row AlignItems="AlignItems.Center" Spacing="1">
                            <MudIcon Size="@Size.Medium" Icon="@Icons.Material.Filled.ViewHeadline" />
                            <MudText><strong>@_users.Total.ToIntFormat()</strong></MudText>
                        </MudStack>
                    </MudTooltip>
                    <MudPagination
                        Rectangular
                        Class="pa-4"
                        MiddleCount="3"
                        BoundaryCount="1"
                        Color="Color.Secondary"
                        @bind-Selected="@_page"
                        @bind-Selected:after="@HandlePageChange"
                        Variant="Variant.Text"
                        Count="@((_users.Total + 9) / 10)"
                    />
                </MudStack>
            </PagerContent>
            <NoRecordsContent>
                @GetNotFoundMessage()
            </NoRecordsContent>
        </MudTable>
    </MudContainer>
</MudContainer>

<AuthorizeView Policy="@Policies.OfficeCreateExatoUser">
    <CreateUserDrawer @ref="@_drawer" AfterSubmit="@Refresh" />
</AuthorizeView>

@inject GetUsersClient Client

@code
{
    private int _page = 1;
    private bool _loading;
    private MudTable<GetUsersItemOut> _table;
    private GetUsersOut _users = new();

    private CreateUserDrawer _drawer;

    protected override async Task OnInitializedAsync()
    {
        await Refresh();
    }

    private async Task Refresh()
    {
        _loading = true;
        _users = await Client.Get(new());
        _loading = false;
    }

    private async Task OpenDrawer()
    {
        await _drawer.Open();
    }

    private string GetNotFoundMessage()
    {
        return "Nenhum usuário encontrado.";
    }

    private async Task HandlePageChange()
    {
        _loading = true;

        _users = await Client.Get(new() { Page = _page - 1 });
        _table.NavigateTo(_page - 1);

        _loading = false;
    }
}
