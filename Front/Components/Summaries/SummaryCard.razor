@namespace Syki.Front.Components.Summaries

<MudItem xs="12" sm="6" md="3" lg="3">
    <MudPaper Class="px-4 py-2">
        <MudStack Row="true" AlignItems="AlignItems.Center">
            <MudIcon Icon="@Icon" Size="Size.Large" Color="@Color" />
            <MudStack Spacing="0">
                <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="0">
                    @if (Loading)
                    {
                        <MudText Typo="Typo.h6"><b>...</b></MudText>
                    }
                    else
                    {
                        <MudText Typo="Typo.h6"><b>@Value.ToThousandSeparated()</b></MudText>
                    }
                </MudStack>
                <MudText Typo="Typo.body1">@Text</MudText>
            </MudStack>
        </MudStack>
    </MudPaper>
</MudItem>

@code
{
    [Parameter]
    public bool Loading { get; set; }

    [Parameter]
    public Color Color { get; set; }

    [Parameter]
    public string Icon { get; set; }

    [Parameter]
    public int Value { get; set; }

    [Parameter]
    public string Text { get; set; }
}
